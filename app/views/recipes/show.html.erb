<div>
  <div>
    <h1>RECIPES:</h1>
    <div>
    <% @recipes.each do |recipe|%>
      <% if recipe.user_id == @user %>
      <%= link_to recipe.name, user_recipe_details_path(user_id: @user, id: recipe.id), class: 'link-to-recipe-detail' %>
        <p><%= recipe.description %></p>
        <%= button_to "Remove", user_destroy_recipe_path(id: recipe.id), method: :delete, class: 'delete-btn'  %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>