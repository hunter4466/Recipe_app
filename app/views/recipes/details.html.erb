<div>
  <div>
    <h1>RECIPE DETAILS:</h1>
    <div>
    
        <h2><%= @recipe.name %></h2>
        <p>Preparation Time: <%= @recipe.preparation_time %></p>
        <p>Cooking Time: <%= @recipe.cooking_time %></p>
        <p><%= @recipe.description %></p>
        <p>ID: <%= @recipe.id %> DELETE THIS</p>
        <p>Public: <%= @recipe.public %></p>
        <%= button_to "Remove", user_destroy_recipe_path(id: @recipe.id), method: :delete, class: 'delete-btn'  %>
        <% @recipe_foods.each do |recipe_food|%>
          <li>
            <h2><%= recipe_food.food.name %></h2>
            <h2><%= recipe_food.food.measurement_unit %></h2>
            <h2><%= recipe_food.food.price %></h2>
            <%= button_to "Remove", user_destroy_food_path(id: recipe_food.id), method: :delete, class: 'delete-btn'  %>
          </li>
      <% end %>
    </div>
  </div>
</div>