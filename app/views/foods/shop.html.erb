<h1>Shopping cart:</h1>
<ul>
  <li>
    <h1>Food</h1>
    <h1>Quantity</hh1>
    <h1>Price</h1>
  </li>
<% @foods.each do |food|%>
  <li>
    <h1><%= food.name %></h1>
    <h1><%=RecipeFood.where("food_id = #{food.id}").joins(:food).sum("quantity") %></h1>
    <h1><%=RecipeFood.where("food_id = #{food.id}").joins(:food).sum("quantity*price") %></h1>
  </li>
<% end %>
</ul>